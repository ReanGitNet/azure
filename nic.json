{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nicName": {
      "type": "string"
    },
    "subnetRef": {
      "type": "string"
    },
    "privateIp": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "applicationSecurityGroups": {
      "type": "array",
      "metadata": {
        "description": "Application Security Groups this NIC belongs to"
      }
    },
    "environment": {
        "value": "[variables('environment')]"
    },
    "region": {
        "value": "[variables('region')]"
    },
    "regionalPartition": {
        "value": "[variables('regionalPartition')]"
    },
    "projectName": {
        "value": "[variables('projectName')]"
    },
    "projectRelease": {
        "value": "[variables('projectRelease')]"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicName')]",
      "apiVersion": "2018-03-01",
      "location": "[parameters('location')]",
      "tags": {
        "environment": "[variables('environment')]",
        "region": "[variables('applicationRegion')]",
        "regionalPartition": "[variables('regionPartition')]",
        "projectName": "[variables('projectName')]",
        "projectRelease": "[parameters('projectRelease')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('privateIp')]",
              "subnet": {
                "id": "[parameters('subnetRef')]"
              },
			  "applicationSecurityGroups": "[parameters('applicationSecurityGroups')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
